<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<!-- 主窗口只负责顶部工具栏和Tab容器 -->
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.open.terminal.openterminal.MainController"
            style="-fx-background-color: #2b2b2b;">

    <!-- 顶部工具栏 -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT"
              style="-fx-background-color: #3c3f41;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="你是最好的程序员！" textFill="white">
                <font>
                    <Font name="System Bold" size="16"/>
                </font>
            </Label>

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="+ 新建连接"
                    onAction="#handleNewConnection"
                    style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
        </HBox>
    </top>

    <!-- 中心区域：只放 TabPane，具体内容由 terminal-tab 决定 -->
    <center>
        <TabPane fx:id="tabPane"
                 tabClosingPolicy="ALL_TABS"
                 style="-fx-background-color: #2b2b2b;"/>
    </center>

</BorderPane>
